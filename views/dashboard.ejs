<%- include ('includes/navbar.ejs') %>
<div class="container content">
    <ul>
      <% posts.forEach((post) => { %>
        <li class="post">
          <div class="author">
            <div>
                <div>
                    <img class="author-img" src="/images/users/<%= post.author.avatar %>" alt="">
                  </div>
                  <div>
                    <p class="author-name"><%= post.author.first_name %><%= post.author.last_name %></p>
                    <small><%= post.createdAt %></small>
                  </div>
            </div>
            <div>
                <a href="/dashboard/edit-post/<%= post._id %>" class="button-41">Edit</a>
                <form action="/dashboard/delete-post/<%= post._id %>" method="post">
                    <button type="submit" class="button-42">Delete</button>
                </form>
            </div>
          </div>
          <p class="post-title"><%= post.title %></p>
          <div class="post-img"><img src="/images/posts/<%= post.avatar %>" alt="" width="200px"></div>
        </li>
      <% }); %>
    </ul>